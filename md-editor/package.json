{
  "name": "@datahog/md-editor",
  "version": "0.1.0",
  "description": "Framework-agnostic markdown editor with Obsidian-style mixed display mode",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./plugins/blocks": {
      "types": "./dist/plugins/blocks/index.d.ts",
      "import": "./dist/plugins/blocks/index.mjs",
      "require": "./dist/plugins/blocks/index.js"
    },
    "./plugins/inlines": {
      "types": "./dist/plugins/inlines/index.d.ts",
      "import": "./dist/plugins/inlines/index.mjs",
      "require": "./dist/plugins/inlines/index.js"
    },
    "./md-editor.css": "./dist/md-editor.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "examples": "vite"
  },
  "dependencies": {
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "markdown",
    "editor",
    "wysiwyg",
    "obsidian",
    "contenteditable"
  ],
  "author": "Datahog",
  "license": "MPL-2.0"
}
