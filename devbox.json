{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.10.7/.schema/devbox.schema.json",
  "packages": {
    "which":       "latest",
    "rustup":      "latest",
    "libiconv":    "latest",
    "wasm-pack":   "latest",
    "nodejs":      "22",
    "cargo-udeps": "latest",
    "fswatch":     "latest"
  },
  "shell": {
    "init_hook": [
      "if [ -z \"$( find $RUSTUP_HOME | grep toolchains/stable )\" ]; then rustup default stable; fi",
      "alias ls='ls --color'",
      "PATH=$PATH:$PWD/frontend/node_modules/.bin"
    ],
    "scripts": {
      "wasm-build": "cd npm-wasm && ./watch_build.sh",
      "frontend": "cd frontend && npm ci && ng serve"
    }
  },
  "env": {
    "LS_COLORS": "di=33",
    "SOME":      "123"
  }
}
